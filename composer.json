{
    "name": "smpita/typeas",
    "description": "Easy type control for static analysis",
    "keywords": [
        "smpita",
        "laravel",
        "typeas"
    ],
    "homepage": "https://github.com/smpita/typeas",
    "license": "MIT",
    "authors": [
        {
            "name": "Sean Pearce",
            "email": "smpita@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "fakerphp/faker": "1.24",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.3|^11.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Smpita\\TypeAs\\": "src/"
        },
        "files": [
            "src/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Smpita\\TypeAs\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit --no-coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
